@model SearchRequest

@{
    ViewData["Title"] = "Поиск по вакансиям";
}

<h1>Поиск по вакансиям</h1>


<form asp-action="Result" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="3">
                        @Html.DisplayNameFor(model => model.KeyWords)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <label asp-for="KeyWords.SearchString"></label>
                        <input class="form-control" asp-for="KeyWords.SearchString" />
                        <span asp-validation-for="KeyWords.SearchString" class="text-danger"></span>
                    </td>
                    <td>
                        <label asp-for="KeyWords.Match"></label>
                        <select class="form-control" asp-for="KeyWords.Match">
                            <option value="FullTime" asp-for="KeyWordSearchMatch.AnyWord">Любое из слов</option>
                            <option value="FullTime" asp-for="KeyWordSearchMatch.AllWords">Каждое из слов</option>
                            <option value="FullTime" asp-for="KeyWordSearchMatch.ExactMatch">Точное совпадение</option>
                        </select>
                        <span asp-validation-for="KeyWords.Match" class="text-danger"></span>
                    </td>
                    <td>
                        <label asp-for="KeyWords.Scope"></label>
                        <select class="form-control" asp-for="KeyWords.Scope">
                            <option value="FullTime" asp-for="KeyWordSearchScope.Title">По названию должности</option>
                            <option value="FullTime" asp-for="KeyWordSearchScope.Description">По описанию должности</option>
                            <option value="FullTime" asp-for="KeyWordSearchScope.Both">В обоих полях</option>
                        </select>
                        <span asp-validation-for="KeyWords.Scope" class="text-danger"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <table class="table">
            <thead>
                <th colspan="2">
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <label asp-for="Salary.Min"></label>
                        <input class="form-control" asp-for="Salary.Min" />
                        <span asp-validation-for="Salary.Min" class="text-danger"></span>
                    </td>
                    <td>
                        <label asp-for="Salary.Max"></label>
                        <input class="form-control" asp-for="Salary.Max" />
                        <span asp-validation-for="Salary.Max" class="text-danger"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="2">
                        @Html.DisplayNameFor(model => model.Organization)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <label asp-for="Organization.Id"></label>
                        <input class="form-control" asp-for="Organization.Id" />
                        <span asp-validation-for="Organization.Id" class="text-danger"></span>
                    </td>
                    <td>
                        <label asp-for="Organization.Name"></label>
                        <input class="form-control" asp-for="Organization.Name" />
                        <span asp-validation-for="Organization.Name" class="text-danger"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="form-gtoup">
        <button type="submit" class="btn btn-primary">Искать</button>
    </div>
</form>

@Html.Partial("_ValidationScriptsPartial")