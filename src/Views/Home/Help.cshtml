@model HelpConfigurationModel
@{
    ViewData["Title"] = "Документация";
}

<redoc untrustedSpec="true" spec-url="https://@(Model.Host)@(Model.OpenApiPath)"></redoc>

@{
    var scriptPath = $"https://{Model.Host}/lib/redoc/redoc.standalone.js";
    if (Model.RedocVersion != null && Model.RedocVersion != "none" && Model.RedocVersion != "")
    {
        scriptPath = $"https://cdn.jsdelivr.net/npm/redoc@{Model.RedocVersion}/bundles/redoc.standalone.js";
    }

    <script src="@(scriptPath)"></script>
}

<style>
    #main.container,
    #main.container main {
        padding: 0px !important;
        margin: 0px !important;
        max-width: none !important;
    }
</style>