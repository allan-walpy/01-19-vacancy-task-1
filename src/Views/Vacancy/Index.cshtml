@model IndexDataModel

@{
    ViewData["Title"] = "Vacancy";
}

<h1>Управление вакансиями</h1>

<p>
    <a asp-action="Create">Создать новую</a>
</p>

@if(Model.HasState)
{
    <p class="@(Model.State.IsSuccess ? "alert-success" : "alert-danger")">
        @(Model.State.Message)
    </p>
}

@if (@Model.Data.Count > 0)
{
    var data = @Model.Data.First();
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => data.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => data.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => data.Organization)
                </th>
                <th>
                    @Html.DisplayNameFor(model => data.CreatedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Data) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization.Name)
                </td>
                <td>
                    @(new DateTime(item.CreatedAt).ToString())
                </td>
                <td>
                    <a label="посмотреть" asp-controller="Vacancy" asp-action="View" asp-route-id="@item.Id"><img class="figure-img in-text-icon" src="~/web/static/icons/manage/view.svg" /></a>
                    <a label="изменить" asp-action="Edit" asp-route-id="@item.Id"><img class="figure-img in-text-icon" src="~/web/static/icons/manage/edit.svg" /></a>
                    <a label="удалить" asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><img class="figure-img in-text-icon" src="~/web/static/icons/manage/delete.svg" /></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-lowercase text-info blockquote">Никаких вакансий <i>пока</i> нет</p>
}