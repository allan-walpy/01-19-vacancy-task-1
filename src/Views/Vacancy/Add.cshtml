@model VacancyAddPageModel
@{
    ViewData["Title"] = "Add Vacancy";
}

<h1 class="text-primary">add vacancy</h1>

<form asp-action="Add" asp-controller="Vacancy" method="post">
    <div class="form-group">
        <label asp-for="@Model.Data.Title"></label>
        <input class="form-input" asp-for="@Model.Data.Title" />
        <span asp-validation-for="@Model.Data.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.Salary"></label>
        <input class="form-input" asp-for="@Model.Data.Salary" />
        <span asp-validation-for="@Model.Data.Salary"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.Description"></label>
        <input class="form-input" asp-for="@Model.Data.Description" />
        <span asp-validation-for="@Model.Data.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.Organization"></label>
        <input class="form-input" asp-for="@Model.Data.Organization" />
        <span asp-validation-for="@Model.Data.Organization"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.EmploymentType"></label>
        <select class="form-input" asp-for="@Model.Data.EmploymentType">
            <option value="FullTime" asp-for="EmploymentType.FullTime">Полный рабочий день</option>
            <option value="PartialTime" asp-for="EmploymentType.PartialTime">Частичная занятость</option>
            <option value="FixedScheldure" asp-for="EmploymentType.FixedSchelure">Постоянный график</option>
            <option value="FlexibleScheldure" asp-for="EmploymentType.FlexibleScheldure">Гибкий график</option>
            <option value="ShiftScheldure" asp-for="EmploymentType.ShiftScheldure">Сменный график</option>
            <option value="RemoteMethod" asp-for="EmploymentType.RemoteMethod">Удаленная работа</option>
            <option value="ShiftMethod" asp-for="EmploymentType.ShiftMethod">Вахтовый метод</option>
        </select>
        <span asp-validation-for="@Model.Data.EmploymentType"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.ContactPerson.Name"></label>
        <input class="form-input" asp-for="@Model.Data.ContactPerson.Name" />
        <span asp-validation-for="@Model.Data.ContactPerson.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.ContactPerson.Surname"></label>
        <input class="form-input" asp-for="@Model.Data.ContactPerson.Surname" />
        <span asp-validation-for="@Model.Data.ContactPerson.Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.ContactPerson.MiddleName"></label>
        <input class="form-input" asp-for="@Model.Data.ContactPerson.MiddleName" />
        <span asp-validation-for="@Model.Data.ContactPerson.MiddleName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data.ContactPhone"></label>
        <input class="form-input" asp-for="@Model.Data.ContactPhone" />
        <span asp-validation-for="@Model.Data.ContactPhone"></span>
    </div>
    <button type="submit" class="btn btn-success">Отправить</button>
</form>